/* QMenuBar Stylesheet for Dark Theme */
QMenuBar {
    background-color: #333333; /* Dark background color */
    color: #FFFFFF; /* Text color */
    padding: 2px; /* Add some padding to the menu bar */
    border: 1px solid #444444; /* Dark gray border */
}

/* QMenuBar Item Styles */
QMenuBar::item {
    background-color: transparent; /* Transparent background for items */
    padding: 6px 12px; /* Padding for items */
    border-radius: 4px; /* Rounded corners for items */
}

/* QMenuBar Item Hover State */
QMenuBar::item:hover {
    background-color: #555555; /* Slightly darker background on hover */
}

/* QMenuBar Item Pressed State */
QMenuBar::item:pressed {
    background-color: #1B6CAB; /* Darker blue background when pressed */
    color: #FFFFFF; /* White text color when pressed */
}

/* QMenuBar Submenu Arrow */
QMenuBar::item:open:menu {
    subcontrol-origin: padding;
    subcontrol-position: right;
    padding-right: 8px; /* Spacing for submenu arrow */
    border-top-right-radius: 4px; /* Rounded corner for the right side */
    border-bottom-right-radius: 4px; /* Rounded corner for the right side */
}

/* QMenuBar Submenu Styles */
QMenu {
    background-color: #333333; /* Dark background for submenu */
    border: 1px solid #444444; /* Dark gray border for submenu */
}

/* QMenuBar Submenu Item Styles */
QMenu::item {
    background-color: transparent; /* Transparent background for submenu items */
    padding: 6px 18px; /* Padding for submenu items */
}

/* QMenuBar Submenu Item Hover State */
QMenu::item:hover {
    background-color: #555555; /* Slightly darker background on hover for submenu items */
}




